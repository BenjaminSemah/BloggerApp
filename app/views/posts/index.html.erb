<h1>ALL POSTS for User <%= @user.id %></h1>

<%= render partial: "shared/user", locals: {user: @user} %>

<ul class="posts--list">
  <% @all_posts.each do |post| %>
    <%= render partial: "shared/post", locals: {post: post} %>
    <div class="comments_div">
      <% post.recent_comments.includes(:author).each do |comment| %>
        <p><%= comment.author.name %>: <%= comment.text %><br></p>
      <% end %>
    </div>
  <% end %>
</ul>

