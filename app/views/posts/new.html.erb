<h1>Create a New Post</h1>

<%= form_with model: @post, url: "/users/#{current_user.id}/posts" do |f| %>
  <div>
    <%= f.hidden_field :user_id, value: current_user.id %>
  </div>

  <div>
    <div>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </div>

    <div>
    <%= f.label :message %>
    <%= f.text_area :text %>
    </div>

    <div>
      <%= f.submit "Add New Post" %>
    </div>
  </div>
<% end %>
